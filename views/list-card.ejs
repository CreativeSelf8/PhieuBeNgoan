  <div class="container">
    <% if (list) { %> <% for (var i=0; i < list.length; i++) { %>
    <a href="#">
      <figure style="background-image: url(<%= list[i].image_url %>)">
        <div class="date">
          <span class="card-date-day"><%= list[i].day %></span>
          <span class="card-date-month"><%= list[i].month %></span>
        </div>
        <figcaption>
          <h4 style="background-color: <%= list[i].tier_color %>">
            <span> <%= list[i].name %> </span>
          </h4>
        </figcaption>
      </figure>
    </a>
    <% } %>
  </div>
  <div class="menu" onclick="this.classList.toggle('open')">
    <div class="button" id="claim-btn"></div>
    <div class="button" id="list-btn"></div>
  </div>
  
  <div class="demo">
    <nav class="pagination-outer" aria-label="Page navigation">
      <ul class="pagination">
        <% if (hasPreviousPage) { %>
        <li class="page-item">
          <a class="page-link" href="?page=1">«</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="?page=<%= previousPage %>">
            <%= previousPage %>
          </a>
        </li>
        <% } %>
        <li class="page-item active">
          <a class="page-link" href="?page=<%= currentPage %>">
            <%= currentPage %>
          </a>
        </li>
        <% if (hasNextPage) { %>
        <li class="page-item">
          <a class="page-link" href="?page=<%= nextPage %>"> <%= nextPage %> </a>
        </li>
        <li class="page-item">
          <a class="page-link" href="?page=<%= lastPage %>">»</a>
        </li>
        <% } %>
      </ul>
    </nav>
  </div>
  <% } %>
  
  <script>
    let dataLength = <%= list.length %>;
    if (dataLength == 0) {
      $(".demo").hide();
    }
    $("#claim-btn").click(() => {
      window.location.href = "/";
    });
    $("#list-btn").click(() => {
      window.location.href = "/list";
    });
  </script>
</body>
